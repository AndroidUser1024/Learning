<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- 去掉系统默认的 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 使 Activity 背景透明 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!-- 平移动画,从底部出现 -->
    <style name="TranslateB2T" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_b2t_in</item>
        <item name="android:windowExitAnimation">@anim/translate_b2t_out</item>
    </style>

    <!-- 平移动画,从顶部出现 -->
    <style name="TranslateT2B" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_t2b_in</item>
        <item name="android:windowExitAnimation">@anim/translate_t2b_out</item>
    </style>

    <!-- 平移动画,从左边出现 -->
    <style name="TranslateL2R" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_l2r_in</item>
        <item name="android:windowExitAnimation">@anim/translate_l2r_out</item>
    </style>

    <!-- 平移动画,从右边出现 -->
    <style name="TranslateR2L" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_r2l_in</item>
        <item name="android:windowExitAnimation">@anim/translate_r2l_out</item>
    </style>

    <!-- 缩放动画 -->
    <style name="Scale" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

</resources>
