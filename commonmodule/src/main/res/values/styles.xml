<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- 去掉系统默认的 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 使 Activity 背景透明 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="TranslateB2T" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_y_in</item>
        <item name="android:windowExitAnimation">@anim/translate_y_out</item>
    </style>

    <style name="TranslateL2R" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_x_in</item>
        <item name="android:windowExitAnimation">@anim/translate_x_out</item>
    </style>

</resources>
