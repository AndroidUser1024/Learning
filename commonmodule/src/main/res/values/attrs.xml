<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 倒计时控件 -->
    <declare-styleable name="CountDownView">
        <attr name="duration" format="float" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="cdvText" format="string" />
        <attr name="cdvTextSize" format="dimension" />
        <attr name="cdvTextColor" format="color" />
    </declare-styleable>

    <!-- ViewPager 的小圆点-->
    <declare-styleable name="ViewPagerPoints">
        <attr name="count" format="integer" />
        <attr name="currentItem" format="integer" />
        <attr name="itemBg" format="color|reference" />
        <attr name="currentItemBg" format="color|reference" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="currentItemWidth" format="dimension" />
        <attr name="currentItemHeight" format="dimension" />
        <attr name="spacing" format="dimension" />
    </declare-styleable>

    <!-- 当有输入时,提示文字会悬浮在上方的 EditText -->
    <declare-styleable name="FloatHintEditText">
        <attr name="edit_text_hint" format="string|reference" />
        <attr name="hint_text_size" format="dimension" />
        <attr name="hint_text_color" format="color|reference" />
    </declare-styleable>

    <!-- 侧滑控件 -->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!--波动侧边索引条-->
    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean" />
        <attr name="sidebar_text_color" format="color" />
        <attr name="sidebar_max_offset" format="dimension" />
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="sidebar_wave" format="boolean" />
        <attr name="sidebar_show_select_index_item_window" format="boolean" />
    </declare-styleable>
    <!-- TitleBar -->
    <declare-styleable name="TitleBar">
        <attr name="paddingLeft" format="dimension|reference" />
        <attr name="paddingTop" format="dimension|reference" />
        <attr name="paddingRight" format="dimension|reference" />
        <attr name="paddingBottom" format="dimension|reference" />

        <attr name="titleText" format="string|reference" />
        <attr name="titleTextSize" format="dimension|reference" />
        <attr name="titleTextColor" format="color|reference" />

        <attr name="leftText" format="string|reference" />
        <attr name="leftTextSize" format="dimension|reference" />
        <attr name="leftTextColor" format="color|reference" />
        <attr name="leftTextPadding" format="dimension|reference" />
        <attr name="leftTextPaddingLeft" format="dimension|reference" />
        <attr name="leftTextPaddingTop" format="dimension|reference" />
        <attr name="leftTextPaddingRight" format="dimension|reference" />
        <attr name="leftTextPaddingBottom" format="dimension|reference" />

        <attr name="leftImageResource" format="color|reference" />
        <attr name="leftImagePadding" format="dimension|reference" />
        <attr name="leftImagePaddingLeft" format="dimension|reference" />
        <attr name="leftImagePaddingTop" format="dimension|reference" />
        <attr name="leftImagePaddingRight" format="dimension|reference" />
        <attr name="leftImagePaddingBottom" format="dimension|reference" />

        <attr name="rightText" format="string|reference" />
        <attr name="rightTextSize" format="dimension|reference" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="rightTextPadding" format="dimension|reference" />
        <attr name="rightTextPaddingLeft" format="dimension|reference" />
        <attr name="rightTextPaddingTop" format="dimension|reference" />
        <attr name="rightTextPaddingRight" format="dimension|reference" />
        <attr name="rightTextPaddingBottom" format="dimension|reference" />

        <attr name="rightImageResource" format="color|reference" />
        <attr name="rightImagePadding" format="dimension|reference" />
        <attr name="rightImagePaddingLeft" format="dimension|reference" />
        <attr name="rightImagePaddingTop" format="dimension|reference" />
        <attr name="rightImagePaddingRight" format="dimension|reference" />
        <attr name="rightImagePaddingBottom" format="dimension|reference" />
    </declare-styleable>

    <!-- 通用圆角布局 -->
    <declare-styleable name="RoundCornerLayout">
        <attr name="radius" format="dimension" />
        <attr name="leftTopRadius" format="dimension" />
        <attr name="leftBottomRadius" format="dimension" />
        <attr name="rightTopRadius" format="dimension" />
        <attr name="rightBottomRadius" format="dimension" />
    </declare-styleable>

    <!-- 通用阴影布局 -->
    <declare-styleable name="ShadowLayout">
        <attr name="bgColor" format="color|reference" />
        <attr name="shadowColor" format="color|reference" />
        <attr name="shadowWidth" format="dimension|reference" />
        <attr name="shadowRadius" format="dimension|reference" />
        <attr name="shadowOffsetX" format="dimension|reference" />
        <attr name="shadowOffsetY" format="dimension|reference" />
    </declare-styleable>
</resources>