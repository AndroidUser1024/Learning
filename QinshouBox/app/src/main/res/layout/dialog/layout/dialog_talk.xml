<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/px600"
        android:layout_height="@dimen/px600"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="@dimen/px30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:src="@drawable/npc_fairy"/>

            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:layout_alignParentRight="true"
                android:src="@drawable/warrior_down"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/image_view_1"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right"
            android:background="@null"
            android:text="ï¹€"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30"/>
    </LinearLayout>
</FrameLayout>