<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/px600"
        android:layout_height="@dimen/px600"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/px30">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_monster"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/monster_lv_tou_guai"/>

            <TextView
                android:id="@+id/tv_monster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                tools:text="名字"/>

            <TextView
                android:id="@+id/tv_monster_life_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:layout_marginTop="@dimen/px50"
                android:textColor="@color/white"
                tools:text="生命"/>

            <TextView
                android:id="@+id/tv_monster_attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                tools:text="攻击"/>

            <TextView
                android:id="@+id/tv_monster_defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                tools:text="防御"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V\n\nS"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_warrior"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/warrior_down"/>

            <TextView
                android:id="@+id/tv_warrior_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="勇士"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_warrior_life_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:layout_marginTop="@dimen/px50"
                android:textColor="@color/white"
                tools:text="生命"/>

            <TextView
                android:id="@+id/tv_warrior_attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                tools:text="攻击"/>

            <TextView
                android:id="@+id/tv_warrior_defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                tools:text="防御"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>