<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题栏 -->
    <declare-styleable name="TitleBar">
        <attr name="titleText" format="string" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextColor" format="color" />
        <attr name="leftText" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="leftMarginLeft" format="dimension" />
        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightMarginRight" format="dimension" />
    </declare-styleable>

    <!-- 倒计时控件 -->
    <declare-styleable name="CountDownView">
        <attr name="duration" format="float" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="cdvText" format="string" />
        <attr name="cdvTextSize" format="dimension" />
        <attr name="cdvTextColor" format="color" />
    </declare-styleable>

    <!-- ViewPager 的小圆点-->
    <declare-styleable name="ViewPagerPoints">
        <attr name="count" format="integer" />
        <attr name="currentItem" format="integer" />
        <attr name="itemBg" format="color|reference" />
        <attr name="currentItemBg" format="color|reference" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="currentItemWidth" format="dimension" />
        <attr name="currentItemHeight" format="dimension" />
        <attr name="spacing" format="dimension" />
    </declare-styleable>

    <!-- 当有输入时,提示文字会悬浮在上方的 EditText -->
    <declare-styleable name="FloatHintEditText">
        <attr name="edit_text_hint" format="string|reference" />
        <attr name="hint_text_size" format="dimension" />
        <attr name="hint_text_color" format="color|reference" />
    </declare-styleable>

    <!-- 侧滑控件 -->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <!--波动侧边索引条-->
    <declare-styleable name="WaveSideBar">
        <attr name="sidebar_lazy_respond" format="boolean" />
        <attr name="sidebar_text_color" format="color" />
        <attr name="sidebar_max_offset" format="dimension" />
        <attr name="sidebar_position" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="sidebar_text_alignment" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="sidebar_wave" format="boolean" />
        <attr name="sidebar_show_select_index_item_window" format="boolean" />
    </declare-styleable>

    <!-- 可以定制圆角的布局 -->
    <declare-styleable name="RCRelativeLayout">
        <!-- 圆形 -->
        <attr name="round_as_circle" format="boolean" />
        <!-- 全部圆角半径 -->
        <attr name="round_corner" format="integer|dimension" />
        <!-- 针对各个角的半径 -->
        <attr name="round_corner_top_left" format="integer|dimension" />
        <attr name="round_corner_top_right" format="integer|dimension" />
        <attr name="round_corner_bottom_left" format="integer|dimension" />
        <attr name="round_corner_bottom_right" format="integer|dimension" />
        <!-- 描边颜色 -->
        <attr name="stroke_color" format="color|reference" />
        <!-- 描边半径 -->
        <attr name="stroke_width" format="integer|dimension" />
    </declare-styleable>
</resources>