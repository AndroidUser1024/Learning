<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SafetyPaddingStyle">
        <item name="android:paddingLeft">@dimen/px30</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/px30</item>
        <item name="android:paddingRight">@dimen/px30</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/px30</item>
    </style>

    <!-- TitleBar 基础样式 -->
    <style name="TitleBarBaseStyle">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px96</item>
        <item name="android:background">#FFF0F1F4</item>
        <item name="paddingLeft">@dimen/px30</item>
        <item name="paddingRight">@dimen/px30</item>
    </style>

    <style name="DataSettingLlHeadImgBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px110</item>
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/px30</item>
        <item name="android:paddingLeft">@dimen/px30</item>
        <item name="android:paddingEnd">@dimen/px30</item>
        <item name="android:paddingRight">@dimen/px30</item>
    </style>

    <style name="DataSettingTvHeadImgPromptBaseStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textSize">@dimen/px30</item>
    </style>

    <!-- 播放列表对话框的动画 -->
    <style name="PlayListDialogAnimation" parent="android:Animation">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/play_list_dialog_enter</item>
        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/play_list_dialog_exit</item>
    </style>
</resources>
