<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_name_dialog_name_is_empty_bg"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.qinshou.qinshoubox.conversation.view.dialog.WebRTCDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_2"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_video_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px86"
            android:gravity="center"
            android:text="@string/chat_tv_video_call_text"
            android:textColor="#FF333333"
            android:textSize="@dimen/px30" />

        <TextView
            android:id="@+id/tv_audio_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px86"
            android:gravity="center"
            android:text="@string/chat_tv_audio_call_text"
            android:textColor="#FF333333"
            android:textSize="@dimen/px30" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:gravity="center"
        android:text="@string/common_tv_cancel_text"
        android:textColor="#FF333333"
        android:textSize="@dimen/px30" />
</LinearLayout>