<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginStart="@dimen/px17"
    android:layout_marginLeft="@dimen/px17"
    android:layout_marginEnd="@dimen/px17"
    android:layout_marginRight="@dimen/px17"
    android:layout_marginBottom="@dimen/px36"
    android:orientation="vertical"
    tools:context="com.qinshou.qinshoubox.conversation.view.adapter.RcvGroupChatMemberFunctionItemView">

    <ImageView
        android:id="@+id/iv_function"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px100"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center"
        android:textColor="	#FF333333"
        tools:text="@string/group_chat_setting_tv_function_text_add_member"
        android:textSize="@dimen/px24" />
</LinearLayout>
