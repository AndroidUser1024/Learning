<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px150"
    android:background="#FF6495ED"
    android:padding="@dimen/px30">

    <ImageButton
        android:id="@+id/ib_search_small"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/ib_scan_qr_code_small"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginStart="@dimen/px30"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ib_search_small" />

    <ImageButton
        android:id="@+id/ib_screen_shots_small"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginStart="@dimen/px30"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ib_scan_qr_code_small" />

    <ImageButton
        android:id="@+id/ib_pay_way_small"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginStart="@dimen/px30"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ib_screen_shots_small" />

</android.support.constraint.ConstraintLayout>