<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px300"
                android:background="#FF6495ED"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_login_by_username_password"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px120"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_username_password" />

                <ImageButton
                    android:id="@+id/ib_login_by_qq"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px120"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_qq" />

                <ImageButton
                    android:id="@+id/ib_login_by_wechat"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px120"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_wechat" />

                <ImageButton
                    android:id="@+id/ib_login_by_weibo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px120"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_weibo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_puzzle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_puzzle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_turning_robot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_turning_robot"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_magic_tower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_magic_tower"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_contact_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_contact_list"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_weather"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_wheel_of_fortune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_wheel_of_fortune"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_chart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_qr_code_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_qr_code_scan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_pei_qi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_pei_qi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btn_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:text="@string/me_test"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

