<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SafetyPaddingStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px110"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.qinshou.qinshoubox.friend.view.adapter.RcvGroupChatMemberForCreateChooseAdapter">

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/create_group_chat_iv_choose_src" />

    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="@dimen/px80"
        android:layout_height="@dimen/px80"
        android:layout_marginStart="@dimen/px30"
        android:layout_marginLeft="@dimen/px30"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px30"
        android:layout_marginLeft="@dimen/px30"
        android:maxLines="1"
        android:textColor="#FF333333"
        android:textSize="@dimen/px28"
        tools:text="Anima" />
</LinearLayout>