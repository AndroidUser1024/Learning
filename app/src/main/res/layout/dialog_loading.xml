<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80808080"
    android:orientation="vertical"
    tools:context="com.qinshou.qinshoubox.me.ui.dialog.LoadingDialog">

    <com.qinshou.commonmodule.widget.RoundCornerLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:radius="@dimen/px20">

        <LinearLayout
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px140"
            android:background="#FFFFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:src="@drawable/common_iv_loading_src" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:text="加载中..."
                android:textColor="#FF000000"
                android:textSize="@dimen/px24" />
        </LinearLayout>
    </com.qinshou.commonmodule.widget.RoundCornerLayout>


</FrameLayout>