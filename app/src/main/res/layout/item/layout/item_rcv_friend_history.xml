<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px127"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="@dimen/px81"
        android:layout_height="@dimen/px81"
        android:layout_marginStart="@dimen/px32"
        android:layout_marginLeft="@dimen/px32"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px30"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginEnd="@dimen/px110"
        android:layout_marginRight="@dimen/px110"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FF333333"
            android:textSize="@dimen/px28"
            tools:text="小不点澄澄小不点澄澄小不点澄澄小不点澄澄" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px13"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FF999999"
            android:textSize="@dimen/px24"
            tools:text="你好,我是澄澄" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_view"
        android:layout_width="@dimen/px85"
        android:layout_height="@dimen/px52"
        android:layout_marginEnd="@dimen/px33"
        android:layout_marginRight="@dimen/px33"
        android:background="@drawable/friend_history_btn_view_bg"
        android:text="@string/friend_history_btn_view_text"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/px26">

    </Button>
</LinearLayout>