<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qinshou.qinshoubox.me.ui.fragment.VideoPlayerActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px500"
        android:background="#FF000000">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px500" />

        <LinearLayout
            android:id="@+id/ll_control"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_alignParentBottom="true"
            android:background="#99000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/px30"
            android:paddingLeft="@dimen/px30"
            android:paddingEnd="@dimen/px30"
            android:paddingRight="@dimen/px30">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:background="@null"
                android:src="@drawable/video_player_iv_play_src" />

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="@dimen/px100"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/px24"
                tools:text="00:00:00" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px10"
                android:layout_marginLeft="@dimen/px10"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="@dimen/px100"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px10"
                android:layout_marginLeft="@dimen/px10"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/px24"
                tools:text="00:00:00" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:layout_marginStart="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:gravity="center"
                android:text="@string/video_player_tv_speed_text"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/px30" />

            <ImageView
                android:id="@+id/iv_fullscreen"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:layout_marginStart="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:src="@drawable/video_player_iv_fullscreen_src" />

            <TextView
                android:id="@+id/tv_play_list"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60"
                android:layout_marginStart="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:gravity="center"
                android:text="@string/video_player_tv_play_list_text"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/px30"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_brightness"
            android:layout_width="@dimen/px300"
            android:layout_height="@dimen/px300"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            android:background="@drawable/video_player_ll_brightness_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_brightness"
                android:layout_width="@dimen/px200"
                android:layout_height="@dimen/px200"
                android:src="@drawable/video_player_iv_brightness_src" />

            <LinearLayout
                android:id="@+id/ll_brightness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:background="#FF000000"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/px1">

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />

                <ImageView
                    android:layout_width="@dimen/px15"
                    android:layout_height="@dimen/px15"
                    android:layout_marginStart="@dimen/px1"
                    android:layout_marginLeft="@dimen/px1"
                    android:src="#FFFFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>