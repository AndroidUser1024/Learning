<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/px20"
    android:paddingBottom="@dimen/px20"
    tools:context="com.qinshou.qinshoubox.conversation.view.adapter.RcvMessageAdapterFromMessageTextItemView">

    <!-- 消息接收时间 -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF999999"
        android:textSize="@dimen/px24"
        tools:text="14:31" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30"
        android:orientation="horizontal">
        <!-- 头像 -->
        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="@dimen/px81"
            android:layout_height="@dimen/px81"
            android:layout_marginStart="@dimen/px32"
            android:layout_marginLeft="@dimen/px32"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px20"
            android:layout_marginLeft="@dimen/px20"
            android:orientation="vertical">
            <!-- 昵称 -->
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px20"
                android:textColor="#FFCCCCCC"
                android:textSize="@dimen/px24"
                android:visibility="gone"
                tools:text="昵称"
                tools:visibility="visible" />
            <!-- 消息内容 -->

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/px300"
                android:maxHeight="@dimen/px300"
                android:minHeight="@dimen/px80"
                tools:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>