<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.qinshou.qinshoubox.me.ui.activity.MagicTowerActivity">

    <TableLayout
        android:id="@+id/tl_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/tl_map"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存储进度"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"/>

            <Button
                android:id="@+id/btn_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取进度"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="等级:"/>

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="经验:"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="金币:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_life_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="生命:"/>

            <TextView
                android:id="@+id/tv_attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="攻击:"/>

            <TextView
                android:id="@+id/tv_defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginStart="@dimen/px50"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="防御:"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_map">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_yellow_key"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:src="@drawable/prop_yellow_key"/>

                <TextView
                    android:id="@+id/tv_yellow_key_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginStart="@dimen/px10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    tools:text="1"/>

                <ImageView
                    android:id="@+id/iv_blue_key"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_marginStart="@dimen/px50"
                    android:src="@drawable/prop_blue_key"/>

                <TextView
                    android:id="@+id/tv_blue_key_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginStart="@dimen/px10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    tools:text="1"/>

                <ImageView
                    android:id="@+id/iv_red_key"
                    android:layout_width="@dimen/px60"
                    android:layout_height="@dimen/px60"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_marginStart="@dimen/px50"
                    android:src="@drawable/prop_red_key"/>

                <TextView
                    android:id="@+id/tv_red_key_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginStart="@dimen/px10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    tools:text="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sheng_guang_hui"
                    android:layout_width="@dimen/px80"
                    android:layout_height="@dimen/px80"
                    android:src="@drawable/prop_sheng_guang_hui"/>

                <ImageView
                    android:id="@+id/iv_feng_zhi_luo_pan"
                    android:layout_width="@dimen/px80"
                    android:layout_height="@dimen/px80"
                    android:src="@drawable/prop_feng_zhi_luo_pan"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_keyboard_right"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:background="@null"
                android:padding="@dimen/px5"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageButton
                android:id="@+id/ib_keyboard_down"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:padding="@dimen/px5"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard_down"
                app:layout_constraintBottom_toBottomOf="@id/ib_keyboard_right"
                app:layout_constraintRight_toLeftOf="@id/ib_keyboard_right"
                app:layout_constraintTop_toTopOf="@id/ib_keyboard_right"/>

            <ImageButton
                android:id="@+id/ib_keyboard_left"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:background="@null"
                android:padding="@dimen/px5"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard_left"
                app:layout_constraintBottom_toBottomOf="@id/ib_keyboard_down"
                app:layout_constraintRight_toLeftOf="@id/ib_keyboard_down"
                app:layout_constraintTop_toTopOf="@id/ib_keyboard_down"/>

            <ImageButton
                android:id="@+id/ib_keyboard_up"
                android:layout_width="@dimen/px100"
                android:layout_height="@dimen/px100"
                android:background="@null"
                android:padding="@dimen/px5"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard_up"
                app:layout_constraintBottom_toTopOf="@id/ib_keyboard_down"
                app:layout_constraintEnd_toEndOf="@id/ib_keyboard_down"
                app:layout_constraintLeft_toLeftOf="@id/ib_keyboard_down"
                app:layout_constraintRight_toRightOf="@id/ib_keyboard_down"
                app:layout_constraintStart_toStartOf="@id/ib_keyboard_down"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
