<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_delete_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px87"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:src="@drawable/user_detail_iv_delete_src" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:layout_marginStart="@dimen/px15"
            android:layout_marginEnd="@dimen/px50"
            android:layout_marginRight="@dimen/px50"
            android:gravity="center"
            android:text="@string/user_detail_tv_delete_contact_text"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />

    </LinearLayout>
</LinearLayout>