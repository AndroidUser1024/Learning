<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.qinshou.qinshoubox.me.ui.activity.MagicTowerActivity">

    <TableLayout
        android:id="@+id/tl_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white">

    </TableLayout>

    <ImageButton
        android:id="@+id/ib_keyboard_right"
        android:layout_width="@dimen/px80"
        android:layout_height="@dimen/px80"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:padding="@dimen/px5"
        android:scaleType="fitCenter"
        android:src="@drawable/keyboard_right"/>

    <ImageButton
        android:id="@+id/ib_keyboard_down"
        android:layout_width="@dimen/px80"
        android:layout_height="@dimen/px80"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/ib_keyboard_right"
        android:layout_toStartOf="@id/ib_keyboard_right"
        android:background="@null"
        android:padding="@dimen/px5"
        android:scaleType="fitCenter"
        android:src="@drawable/keyboard_down"/>

    <ImageButton
        android:id="@+id/ib_keyboard_left"
        android:layout_width="@dimen/px80"
        android:layout_height="@dimen/px80"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/ib_keyboard_down"
        android:layout_toStartOf="@id/ib_keyboard_down"
        android:background="@null"
        android:padding="@dimen/px5"
        android:scaleType="fitCenter"
        android:src="@drawable/keyboard_left"/>

    <ImageButton
        android:id="@+id/ib_keyboard_up"
        android:layout_width="@dimen/px80"
        android:layout_height="@dimen/px80"
        android:layout_above="@id/ib_keyboard_down"
        android:layout_toLeftOf="@id/ib_keyboard_right"
        android:layout_toStartOf="@id/ib_keyboard_right"
        android:background="@null"
        android:padding="@dimen/px5"
        android:scaleType="fitCenter"
        android:src="@drawable/keyboard_up"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="等级:"/>

        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="经验:"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="金币:"/>

        <TextView
            android:id="@+id/tv_life_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="生命:"/>

        <TextView
            android:id="@+id/tv_attack_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="攻击:"/>

        <TextView
            android:id="@+id/tv_defense_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            tools:text="防御:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_yellow_key"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:src="@drawable/prop_yellow_key"/>

            <TextView
                android:id="@+id/tv_yellow_key_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginStart="@dimen/px10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_blue_key"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:src="@drawable/prop_blue_key"/>

            <TextView
                android:id="@+id/tv_blue_key_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginStart="@dimen/px10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_red_key"
                android:layout_width="@dimen/px60"
                android:layout_height="@dimen/px60"
                android:src="@drawable/prop_red_key"/>

            <TextView
                android:id="@+id/tv_red_key_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginStart="@dimen/px10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                tools:text="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sheng_guang_hui"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:src="@drawable/prop_sheng_guang_hui"/>

        <ImageView
            android:id="@+id/iv_feng_zhi_luo_pan"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:src="@drawable/prop_feng_zhi_luo_pan"/>
    </LinearLayout>
</RelativeLayout>
